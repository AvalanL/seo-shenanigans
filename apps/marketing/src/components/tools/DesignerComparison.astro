<script>
function filterDesigners(button) {
  // Remove active class from all buttons
  document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));

  // Add active class to clicked button
  button.classList.add('active');

  const filter = button.dataset.filter;
  const rows = document.querySelectorAll('.designer-row');

  rows.forEach(row => {
    if (filter === 'all') {
      row.style.display = 'table-row';
    } else {
      const tags = row.dataset.tags || '';
      if (tags.includes(filter)) {
        row.style.display = 'table-row';
      } else {
        row.style.display = 'none';
      }
    }
  });

  // Update visible count
  const visibleRows = document.querySelectorAll('.designer-row[style="table-row"], .designer-row:not([style*="none"])').length;

  // Add feedback message
  let feedbackDiv = document.getElementById('filter-feedback');
  if (!feedbackDiv) {
    feedbackDiv = document.createElement('div');
    feedbackDiv.id = 'filter-feedback';
    feedbackDiv.className = 'text-center text-gray-600 text-sm mt-2';
    button.parentElement.appendChild(feedbackDiv);
  }

  if (filter === 'all') {
    feedbackDiv.textContent = 'Visar alla svenska brudkl√§nningsdesigners';
  } else {
    feedbackDiv.textContent = `Visar ${visibleRows} designers som matchar "${getFilterName(filter)}"`;
  }
}

function getFilterName(filter) {
  const filterNames = {
    budget: 'budget-v√§nliga alternativ',
    sustainable: 'h√•llbara val',
    minimalist: 'minimalistisk stil',
    romantic: 'romantisk stil',
    dramatic: 'dramatisk stil'
  };
  return filterNames[filter] || filter;
}

// Initialize with showing all designers
document.addEventListener('DOMContentLoaded', function() {
  // Add hover effects to table rows
  const rows = document.querySelectorAll('.designer-row');
  rows.forEach(row => {
    row.addEventListener('mouseenter', function() {
      this.style.transform = 'scale(1.01)';
      this.style.transition = 'all 0.2s ease';
    });

    row.addEventListener('mouseleave', function() {
      this.style.transform = 'scale(1)';
    });
  });
});
</script>

