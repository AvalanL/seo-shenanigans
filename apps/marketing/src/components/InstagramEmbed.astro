---
interface Props {
  username: string;
  title: string;
  type?: 'profile' | 'post' | 'gallery';
  maxPosts?: number;
}

const { username, title, type = 'gallery', maxPosts = 6 } = Astro.props;

// Ta bort @ om det finns
const cleanUsername = username.replace('@', '').replace('https://instagram.com/', '').replace('https://www.instagram.com/', '');
---

<section class="instagram-embed">
  <h2>FÃ¶lj {title} pÃ¥ Instagram</h2>

  {type === 'profile' && (
    <div class="instagram-profile">
      <iframe
        src={`https://www.instagram.com/${cleanUsername}/embed/`}
        width="100%"
        height="480"
        frameborder="0"
        scrolling="no"
        allowtransparency="true"
        title={`Instagram profil fÃ¶r ${title}`}
        loading="lazy"
      />
    </div>
  )}

  {type === 'gallery' && (
    <div class="instagram-gallery">
      <!-- Instagram widget frÃ¥n elfsight eller liknande -->
      <div class="instagram-widget" data-username={cleanUsername}>
        <p class="instagram-fallback">
          <a href={`https://instagram.com/${cleanUsername}`} target="_blank" rel="noopener">
            Visa {title} pÃ¥ Instagram â†’
